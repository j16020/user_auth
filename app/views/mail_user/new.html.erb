<div class="col">
<%= form_tag("/mail_user/create", method: "post",class: "form-group" ) do %>
    <%= label_tag(:q, "mail address") %>
    <%= text_area_tag :body, nil, placeholder: "", class:"form-control"%>
    <small id="emailHelp" class="form-text text-muted">メールアドレスを改行区切りで入力してください。</small>
    <%= submit_tag("送信",class: "btn btn-primary") %>
<% end %>
</div>