
<div class="col-md-12">
<%= form_tag("/user_auth/forced_create", method: "post",class: "form-group" ) do %>
    <%= label_tag(:q, "Mail") %>
    <%= email_field :email,nil, value: flash[:alert_mail], readonly:true,class:"form-control"%>
    <small id="emailHelp" class="form-text text-muted">メールアドレスを入力してください。</small>
    <%= text_field_tag :mcid, nil, value: flash[:alert_mcid], readonly:true, class:"form-control"%>
    <small id="idHelp" class="form-text text-muted">Minecraft IDを入力してください。</small>
    <%= submit_tag("送信",class: "btn btn-primary") %>
<% end %>
</div>